@model SuperBodega.ECommerceWeb.Models.ProductViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Shop")">Tienda</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Shop", new { categoryId = Model.CategoryId })">@Model.CategoryName</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name">
                }
                else
                {
                    <img src="https://via.placeholder.com/600x400?text=@Model.Name" class="img-fluid rounded" alt="@Model.Name">
                }
            </div>
        </div>
        <div class="col-md-6">
            <h1 class="mb-2">@Model.Name</h1>
            <span class="badge bg-primary mb-3">@Model.CategoryName</span>
            
            <div class="mb-3">
                <div class="d-flex align-items-center">
                    <div class="text-warning me-2">
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-half"></i>
                    </div>
                    <span class="text-muted small">(4.5/5) - 28 reseñas</span>
                </div>
            </div>
            
            <hr />
            <h3 class="text-primary mb-4">@Model.Price.ToString("C")</h3>
            <p class="mb-4">@Model.Description</p>
            
            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="mb-4">
                <input type="hidden" name="productId" value="@Model.Id" />
                <div class="row g-3 align-items-center">
                    <div class="col-auto">
                        <label for="quantity" class="col-form-label">Cantidad:</label>
                    </div>
                    <div class="col-auto">
                        <input type="number" id="quantity" name="quantity" class="form-control" value="1" min="1" max="@Model.Stock" />
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-cart-plus me-2"></i> Agregar al Carrito
                        </button>
                    </div>
                </div>
            </form>
            
            <div class="alert alert-info d-flex align-items-center">
                <i class="bi bi-box-seam fs-4 me-2"></i>
                <div>
                    <strong>Disponibilidad:</strong> @(Model.Stock > 0 ? $"{Model.Stock} unidades en stock" : "Agotado")
                </div>
            </div>
            
            <div class="d-flex justify-content-between mt-4">
                <a href="@Url.Action("Index", "Shop")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i> Continuar Comprando
                </a>
                
                <button type="button" class="btn btn-outline-danger">
                    <i class="bi bi-heart me-2"></i> Agregar a Favoritos
                </button>
            </div>
        </div>
    </div>
    
    <div class="row mt-5">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3>Descripción del producto</h3>
            </div>
            <div class="card-body">
                <p>@Model.Description</p>
            </div>
        </div>
    </div>
</div>
</div>